<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_movie_header"
        android:layout_width="0dp"
        android:layout_height="232dp"
        android:contentDescription="@string/text_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inception_header" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/lorem_ipsom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_movie_cover"
        android:paddingTop="5dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingBottom="30dp"/>

    <ImageView
        android:id="@+id/image_movie_cover"
        android:layout_width="125dp"
        android:layout_height="183dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inception_cover"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/text_movie_title"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_movie_time"
        app:layout_constraintStart_toEndOf="@+id/image_movie_cover"
        app:layout_constraintTop_toBottomOf="@+id/image_movie_header"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_movie_time"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/text_movie_time"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_movie_cover"
        app:layout_constraintEnd_toEndOf="@+id/text_movie_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_movie_name" />

</androidx.constraintlayout.widget.ConstraintLayout>